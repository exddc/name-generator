# --- Local ---
GROQ_API_KEY=your_groq_api_key

# --- Database ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=domain_generator

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
RQ_QUEUE=domain_checks

# --- Worker Configuration ---
# Maximum concurrent domain checks per worker (default: 10)
WORKER_MAX_CONCURRENT_CHECKS=10

# DNS/WHOIS lookup timeout in seconds (default: 3.0)
DOMAIN_CHECKER_DNS_TIMEOUT=3.0

# --- Worker Idle Recheck Configuration ---
# Enable automatic rechecking of stale domains when workers are idle (default: true)
WORKER_ENABLE_IDLE_RECHECK=true

# How long the queue must be idle before starting recheck in seconds (default: 60)
WORKER_IDLE_THRESHOLD_SECONDS=60

# How often to recheck domain statuses in days (default: 7)
WORKER_RECHECK_INTERVAL_DAYS=7

# Number of domains to recheck per batch (default: 50)
WORKER_RECHECK_BATCH_SIZE=50

# How often to check if we should run a recheck in seconds (default: 30)
WORKER_RECHECK_POLL_INTERVAL=30

# --- Production ---
# GROQ_API_KEY=your_groq_api_key_for_production